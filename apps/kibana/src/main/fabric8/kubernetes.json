{
  "apiVersion": "v1beta3",
  "kind": "List",
  "id": "kibana-config",
  "items": [
    {
      "apiVersion": "v1beta3",
      "kind": "ReplicationController",
      "metadata": {
        "name": "kibana-controller",
        "labels": {
          "component": "kibana-viewer"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "component": "kibana-viewer"
        },
        "template": {
          "metadata": {
            "name": "kibanaPod",
            "labels": {
              "component": "kibana-viewer"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "kibana-image",
                "image": "jimmidyson/kibana4:latest",
                "imagePullPolicy": "IfNotPresent",
                "ports": [
                  {
                    "name": "kibana-port",
                    "containerPort": 5601
                  }
                ],
                "env": [
                  {
                    "name": "ELASTICSEARCH_SERVICE_NAME",
                    "value": "ELASTICSEARCH"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1beta3",
      "kind": "Service",
      "metadata": {
        "name": "kibana-service"
      },
      "spec": {
        "ports": [
          {
            "port": 80,
            "targetPort": "kibana-port"
          }
        ],
        "selector": {
          "component": "kibana-viewer"
        }
      }
    }
  ]
}
