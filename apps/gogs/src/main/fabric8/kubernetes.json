{
  "apiVersion": "v1beta1",
  "kind": "Config",
  "id": "gogs-config",
  "items": [
    {
      "apiVersion": "v1beta1",
      "kind": "ReplicationController",
      "id": "gogs-rc",
      "desiredState": {
        "replicas": 1,
        "replicaSelector": {
          "component": "gogs"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "version": "v1beta1",
              "name": "gogs-container",
              "containers": [
                {
                  "name": "gogs-image",
                  "image": "fabric8/gogs:latest",
                  "imagePullPolicy": "PullIfNotPresent",
                  "ports": [
                    {
                      "name": "http",
                      "containerPort": 3000
                    },
                    {
                      "name": "ssh",
                      "containerPort": 22
                    }
                  ],
                  "env": [
                    {"name": "SKIP_TLS_VERIFY", "value":"true"},
                    {"name": "DOMAIN", "value":"gogs.fabric8.local"},
                    {"name": "ROOT_URL", "value":"http://gogs.fabric8.local/"},
                    {"name": "TASK_INTERVAL", "value":"0"}
                  ]
                }
              ]
            }
          },
          "labels": {
            "component": "gogs"
          }
        }
      },
      "labels": {
        "component": "gogs"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "gogs-http-service",
      "containerPort": "http",
      "port": 80,
      "selector": {
        "component": "gogs"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "gogs-ssh-service",
      "containerPort": "ssh",
      "port": 22,
      "selector": {
        "component": "gogs"
      }
    }
  ]
}
